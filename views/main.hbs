<!DOCTYPE html>
<html>
	<head>
		<title>Code Pods</title>
        <style>

            #navBar {
                background-color: #585ea2;
                height: 50px;
                display: flex;
                padding-left:20px;
            }

            #navBar h1 {
                color: white
            }

            #pageLayout {
                display: flex;
                flex-direction: column;
                height: 100vh;

            }

            #content {
                flex:1;
            }

            #footer {
                background-color: silver;
                height: 50px;
            }
        </style>
	</head>
	<body>
    <div id="pageLayout">
        <div id="navBar">
            <h1>Code Pods</h1>
            
        </div>
        <div id="content">

            {{#if user }}
            <h2>Hello, {{ user.displayName }}.</h2>
            <h4>{{user.email}}</h4>
            
            {{#each pods}}
            <div>
                {{{log this}}}
                {{{podUrl this ../user }}}
                
            </div>
                
            {{/each}}

            <div><a href="/auth/logout">Log Out</a></div>
		 {{else }}
			<a href="/auth/microsoft">
                <img src="/images/ms-symbollockup_signin_dark.svg" alt="Login with Microsoft">
                </img>
            </a>
		    {{/if}}
            
        </div>
        <div id="footer">
            Made with â™¥ by Leroy Salih
        </div>
    </div>
            

            
	</body>
</html>
